<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt"
    android:orientation="vertical"
    android:background="@color/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/linearLayout1111" android:layout_width="match_parent" android:layout_height="360dp" android:layout_marginTop="0dp" android:layout_alignParentTop="true">
                <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/adView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    ads:adSize="BANNER"
                    ads:adUnitId="ca-app-pub-3940256099942544/1033173712"></com.google.android.gms.ads.AdView>

                 </LinearLayout>
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_below="@+id/linearLayout1111">
                <TableLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TableRow android:layout_width="match_parent" android:layout_height="0dp" android:weightSum="1.5" android:layout_weight="0.5">
                        <RelativeLayout android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="0.5">

                            <Button
                                android:id="@+id/ageabove"
                                android:layout_width="90dp"
                                android:layout_height="105dp"
                                android:onClick="ageabove"
                                android:layout_marginLeft="8dp"
                                android:background="@drawable/targetbloodtwentybelowbtn"
                                android:gravity="bottom|center_vertical|center_horizontal|center"
                                android:paddingBottom="7dp"
                                android:singleLine="false"
                                android:text="Age 20 Above"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#000000"
                                android:textSize="11sp"
                                android:typeface="serif" />
                        </RelativeLayout>
                        <RelativeLayout android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="0.5">

                            <Button
                                android:id="@+id/agebelow"
                                android:layout_width="90dp"
                                android:layout_height="105dp"
                                android:layout_marginLeft="15dp"
                                android:background="@drawable/healthtipsbtn"
                                android:gravity="bottom|center_vertical|center_horizontal|center"
                                android:paddingBottom="7dp"
                                android:singleLine="false"
                                android:text="Age 20 Below"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#000000"
                                android:onClick="agebelow"
                                android:textSize="15sp"
                                android:typeface="serif" />
                        </RelativeLayout>
                        <RelativeLayout android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="0.5">

                            <Button
                                android:id="@+id/pregnant"
                                android:layout_width="90dp"
                                android:layout_height="105dp"
                                android:layout_marginLeft="15dp"
                                android:background="@drawable/quitsugarbtn"
                                android:gravity="bottom|center_vertical|center_horizontal|center"
                                android:onClick="pregnant"
                                android:paddingBottom="7dp"
                                android:singleLine="false"
                                android:text="Pregnant women"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#000000"
                                android:textSize="15sp"
                                android:typeface="serif" /> </RelativeLayout>
                    </TableRow>
                    <TableRow android:layout_width="match_parent" android:layout_height="0dp" android:weightSum="1.5" android:layout_weight="0.5">
                        <RelativeLayout android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="0.5">

                            <Button
                                android:id="@+id/suglevelsmm"
                                android:layout_width="90dp"
                                android:layout_height="105dp"
                                android:layout_marginLeft="8dp"
                                android:background="@drawable/worldmapbtn"
                                android:gravity="bottom|center_vertical|center_horizontal|center"
                                android:paddingBottom="7dp"
                                android:text="suagr levels"
                                android:onClick="suglevelsmain"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#000000"
                                android:textSize="15sp"
                                android:typeface="serif" />
                        </RelativeLayout>
                        <RelativeLayout android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="0.5">

                            <Button
                                android:id="@+id/glulcose"
                                android:layout_width="90dp"
                                android:layout_height="105dp"
                                android:layout_marginLeft="15dp"
                                android:background="@drawable/sugartest"
                                android:gravity="bottom|center_vertical|center_horizontal|center"
                                android:paddingBottom="7dp"
                                android:onClick="glucose"
                                android:singleLine="false"
                                android:text="glucose levels"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#000000"
                                android:textSize="15sp"
                                android:typeface="serif" /> </RelativeLayout>
                        <RelativeLayout android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="0.5">

                            <Button
                                android:id="@+id/kidsadults"
                                android:layout_width="90dp"
                                android:layout_height="105dp"
                                android:layout_marginLeft="15dp"
                                android:background="@drawable/diabetesbtn"
                                android:onClick="kidsadults"
                                android:gravity="bottom|center_vertical|center_horizontal|center"
                                android:paddingBottom="7dp"
                                android:text="kids and adults"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#000000"
                                android:textSize="15sp"
                                android:typeface="serif" />
                        </RelativeLayout>
                    </TableRow>
                    <TableRow android:layout_width="match_parent" android:layout_height="0dp" android:weightSum="1.5" android:layout_weight="0.5">
                        <RelativeLayout android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="0.5">

                            <Button
                                android:id="@+id/riskweight"
                                android:layout_width="90dp"
                                android:layout_height="105dp"
                                android:onClick="atrisk"
                                android:layout_marginLeft="8dp"
                                android:background="@drawable/sugar_levelsbtn"
                                android:gravity="bottom|center_vertical|center_horizontal|center"
                                android:paddingBottom="8dp"
                                android:text="At risk weight"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#000000"
                                android:textSize="15sp"
                                android:typeface="serif" />
                        </RelativeLayout>
                        <RelativeLayout android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="0.5">

                            <Button
                                android:id="@+id/sugchart"
                                android:layout_width="90dp"
                                android:layout_height="105dp"
                                android:layout_marginLeft="15dp"
                                android:background="@drawable/reports"
                                android:gravity="bottom|center_vertical|center_horizontal|center"
                                android:paddingBottom="5dp"
                                android:text="sugar chart"
                                android:onClick="sugchartmainoo"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#000000"
                                android:textSize="15sp"
                                android:typeface="serif" />
                        </RelativeLayout>
                        <RelativeLayout android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="0.5">

                            <Button
                                android:id="@+id/suglevlchart"
                                android:layout_width="90dp"
                                android:layout_height="105dp"
                                android:layout_marginLeft="15dp"
                                android:background="@drawable/lowbloodsugarbtn"
                                android:gravity="bottom|center_vertical|center_horizontal|center"
                                android:paddingBottom="7dp"
                                android:singleLine="false"
                                android:onClick="sugchart"
                                android:text="level chart"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#000000"
                                android:textSize="15sp"
                                android:typeface="serif" /></RelativeLayout>
                    </TableRow>
                </TableLayout>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
