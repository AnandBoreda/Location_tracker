<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relout"
    android:background="#000"
    tools:context=".ScreenLightMain">
    <RelativeLayout
        android:id="@+id/bgwhite"
        android:layout_width="match_parent"
        android:background="@drawable/shadow"
        android:layout_height="match_parent"
        android:gravity="center">
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/whitebtn"
            android:onClick="whitebtn"
            android:background="@drawable/lgt_start">
        </Button>
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/blackbtn"
            android:background="@drawable/lgt_stop"
            android:onClick="blackbtn">
        </Button>
    </RelativeLayout>
</RelativeLayout>