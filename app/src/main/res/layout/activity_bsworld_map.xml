<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt"
    android:orientation="vertical"
    android:background="@color/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/linearLayout1111"
                android:layout_width="match_parent"
                android:layout_height="360dp"
                android:layout_marginTop="0dp"
                android:layout_alignParentTop="true">
                <FrameLayout
                    android:id="@+id/fl_adplaceholder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/linearLayout1111">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:weightSum="1.5"
                            android:layout_weight="0.5">
                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5">
                                <Button
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:textSize="14sp"
                                    android:typeface="serif"
                                    android:textColor="#000000"
                                    android:gravity="bottom|center_vertical|center_horizontal|center"
                                    android:id="@+id/worldmap"
                                    android:background="@drawable/worldmapbtn"
                                    android:onClick="sugarmap"
                                    android:paddingBottom="7dp"
                                    android:layout_width="90dp"
                                    android:layout_height="105dp"
                                    android:layout_marginLeft="8dp"
                                    android:text="Sugar Map"
                                    android:singleLine="false"/>
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5">
                                <Button
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:textSize="14sp"
                                    android:typeface="serif"
                                    android:textColor="#000000"
                                    android:gravity="bottom|center_vertical|center_horizontal|center"
                                    android:id="@+id/deathworldmap"
                                    android:background="@drawable/worldmapbtn"
                                    android:onClick="deathmap"
                                    android:paddingBottom="7dp"
                                    android:layout_width="90dp"
                                    android:layout_height="105dp"
                                    android:layout_marginLeft="15dp"
                                    android:text="Death Map"
                                    android:singleLine="false"/>
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5">
                                <Button
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:textSize="12sp"
                                    android:typeface="serif"
                                    android:textColor="#000000"
                                    android:gravity="bottom|center_vertical|center_horizontal|center"
                                    android:id="@+id/top5Countries"
                                    android:onClick="topcoun"
                                    android:background="@drawable/worldmapbtn"
                                    android:paddingBottom="7dp"
                                    android:layout_width="90dp"
                                    android:layout_height="105dp"
                                    android:layout_marginLeft="20dp"
                                    android:text="Top5 Countries"
                                    android:singleLine="false"/>
                            </RelativeLayout>
                        </TableRow>
                    </TableLayout>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
