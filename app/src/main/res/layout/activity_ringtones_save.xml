<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/bg"
    android:layout_height="match_parent"
    tools:context=".RingtonesSave">
    <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-3940256099942544/1033173712"/>
    <RelativeLayout
        android:layout_width="match_parent"

        android:layout_height="match_parent">
    <Button
        android:layout_width="200dp"
        android:layout_marginTop="150dp"
        android:text="select from "
        android:layout_marginLeft="100dp"
        android:background="@drawable/button_style"
        android:layout_height="60dp"
        android:onClick="files" />

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/ringtxt"
            android:gravity="center_horizontal|center|center_vertical"
            android:layout_height="wrap_content"
            android:layout_marginTop="400dp"
            android:textSize="25sp"
            android:text="please select ringtone by clicking the button above, and give permission"
            />

        <TextView
            android:id="@+id/txtView"
            android:layout_marginTop="300dp"
            android:textSize="25sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </RelativeLayout>

</RelativeLayout>