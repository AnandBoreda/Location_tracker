<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:orientation="vertical"
    android:background="@color/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                       android:gravity="center"
                       android:orientation="vertical"
                       android:id="@+id/linearLayout1111"
                       android:layout_width="match_parent"
                       android:layout_height="300dp"
                       android:layout_marginTop="0dp"
                       android:layout_alignParentTop="true">
                <com.google.android.gms.ads.AdView
                xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:id="@+id/native_adView"
                    android:translationY="150dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                ads:adSize="300x250"
                ads:adUnitId="@string/bannerID">
            </com.google.android.gms.ads.AdView>

                <com.google.android.gms.ads.AdView
                    android:id="@+id/adView"
                    android:layout_width="398dp"
                    android:translationY="1000dp"
                    android:layout_height="294dp"
                    app:adSize="BANNER"
                    app:adUnitId="ca-app-pub-3940256099942544/1033173712" />

                <FrameLayout
                       android:id="@+id/fl_adplaceholder"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="2dp"/>
            </LinearLayout>
            <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="5dp"
                       android:layout_below="@+id/linearLayout1111">
                <TableLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">
                    <TableRow
                       android:layout_width="match_parent"
                       android:layout_height="0dp"
                       android:weightSum="1.5"
                       android:layout_weight="0.5">
                        <RelativeLayout
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:layout_weight="0.5">
                            <Button
                                android:id="@+id/locmob"
                                android:layout_width="90dp"
                                android:layout_height="105dp"
                                android:layout_marginLeft="8dp"
                                android:background="@drawable/loc_btn"
                                android:gravity="bottom|center_vertical|center_horizontal|center"
                                android:paddingBottom="7dp"
                                android:singleLine="false"
                                android:text="@string/locator"
                                android:onClick="locator"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#000000"
                                android:textSize="15sp"
                                android:typeface="serif" />
                        </RelativeLayout>
                        <RelativeLayout
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:layout_weight="0.5">

                            <Button
                                android:id="@+id/callblock"
                                android:layout_width="90dp"
                                android:layout_height="105dp"
                                android:layout_marginLeft="15dp"
                                android:background="@drawable/call_block"
                                android:gravity="bottom|center_vertical|center_horizontal|center"
                                android:paddingBottom="7dp"
                                android:singleLine="false"
                                android:onClick="call_block"
                                android:text="Call Blocks"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#000000"
                                android:textSize="15sp"
                                android:typeface="serif" />
                        </RelativeLayout>
                        <RelativeLayout
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:layout_weight="0.5">
                            <ImageView
                       android:textAppearance="?android:attr/textAppearanceMedium"
                       android:textSize="15sp"
                       android:typeface="serif"
                                android:onClick="locad"
                       android:textColor="#000000"
                       android:gravity="bottom|center_vertical|center_horizontal|center"
                       android:id="@+id/flashad"
                       android:paddingBottom="7dp"
                       android:layout_width="90dp"
                       android:layout_height="105dp"
                                android:layout_marginStart="20dp"
                       android:layout_marginLeft="20dp"
                       android:src="@drawable/ad"
                       android:text=""
                       android:singleLine="false"/>
                        </RelativeLayout>
                    </TableRow>
                    <TableRow
                       android:layout_width="match_parent"
                       android:layout_height="0dp"
                       android:weightSum="1.5"
                       android:layout_weight="0.5">
                        <RelativeLayout
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:layout_weight="0.5">

                            <Button
                                android:id="@+id/stdcodes"
                                android:layout_width="90dp"
                                android:layout_height="105dp"
                                android:layout_marginLeft="8dp"
                                android:background="@drawable/std_btn"
                                android:gravity="bottom|center_vertical|center_horizontal|center"
                                android:paddingBottom="7dp"
                                android:text="@string/std"
                                android:onClick="std_codes"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#000000"
                                android:textSize="15sp"
                                android:typeface="serif" />
                        </RelativeLayout>
                        <RelativeLayout
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:layout_weight="0.5">
                            <ImageView
                       android:textAppearance="?android:attr/textAppearanceMedium"
                       android:textSize="15sp"
                       android:typeface="serif"
                       android:textColor="#000000"
                       android:gravity="bottom|center_vertical|center_horizontal|center"
                       android:id="@+id/selfiead"
                       android:paddingBottom="7dp"
                       android:layout_width="90dp"
                       android:layout_height="105dp"
                                android:onClick="locad1"
                       android:src="@drawable/ad"
                       android:text=""
                       android:layout_alignParentTop="true"
                       android:layout_centerHorizontal="true"/>
                        </RelativeLayout>
                        <RelativeLayout
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:layout_weight="0.5">
                            <Button
                       android:textAppearance="?android:attr/textAppearanceMedium"
                       android:textSize="15sp"
                       android:typeface="serif"
                       android:onClick="isd_codes"
                       android:textColor="#000000"
                       android:gravity="bottom|center_vertical|center_horizontal|center"
                       android:id="@+id/isd_codes"
                       android:background="@drawable/isdcode"
                       android:paddingBottom="7dp"
                       android:layout_width="90dp"
                       android:layout_height="105dp"
                       android:layout_marginLeft="20dp"
                       android:text="@string/isd"/>
                        </RelativeLayout>
                    </TableRow>
                    <TableRow android:layout_width="match_parent"
                       android:layout_height="0dp"
                       android:weightSum="1.5"
                       android:layout_weight="0.5">
                        <RelativeLayout
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:layout_weight="0.5">

                            <Button
                                android:id="@+id/settings"
                                android:layout_width="90dp"
                                android:layout_height="105dp"
                                android:layout_marginLeft="8dp"
                                android:background="@drawable/ad"
                                android:gravity="bottom|center_vertical|center_horizontal|center"
                                android:onClick="settings"
                                android:paddingBottom="8dp"
                                android:text="`"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#000000"
                                android:textSize="15sp"
                                android:typeface="serif" />
                        </RelativeLayout>
                        <RelativeLayout android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:layout_weight="0.5">
                            <Button
                       android:textAppearance="?android:attr/textAppearanceMedium"
                       android:textSize="15sp"
                       android:typeface="serif"
                       android:textColor="#000000"
                       android:gravity="bottom|center_vertical|center_horizontal|center"
                       android:id="@+id/locreport"
                       android:background="@drawable/reports"
                                android:onClick="report"
                       android:paddingBottom="5dp"
                       android:layout_width="90dp"
                       android:layout_height="105dp"
                       android:layout_marginLeft="15dp"
                       android:text="@string/report"/>
                        </RelativeLayout>
                        <RelativeLayout
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:layout_weight="0.5">
                            <ImageView
                       android:textAppearance="?android:attr/textAppearanceMedium"
                       android:textSize="15sp"
                       android:typeface="serif"
                       android:textColor="#000000"
                                android:onClick="locad2"
                       android:gravity="bottom|center_vertical|center_horizontal|center"
                       android:id="@+id/gpsad2"
                       android:paddingBottom="5dp"
                       android:layout_width="90dp"
                       android:layout_height="105dp"
                       android:layout_marginLeft="20dp"
                       android:src="@drawable/ad"
                       android:text="@string/ad"/>
                        </RelativeLayout>
                    </TableRow>
                </TableLayout>
            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>

    <com.google.android.gms.ads.AdView
        android:id="@+id/banner_adView"
        android:translationY="650dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-31dp"
        app:adSize="BANNER"
        app:adUnitId="@string/bannerID"/>

</RelativeLayout>
